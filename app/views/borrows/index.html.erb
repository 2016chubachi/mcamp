<%= render partial: "shared/sidebar", locals:{subType: "Borrows"} %>

  <div class="main">
     <ul class="each-item">
        <% @loanItems.each do |item|%><li>
       <div class="each-item">
        <!-- 図 -->
        <%= loan_item_image_tag item, class: "item-pic" %>
        <!-- アイテム名 -->
        <h3 class="item-title"><%= link_to item.item_name, borrow_path(:id=> item.id)%></h3>
         <!-- カテゴリー-->
         <div class="item-ctlg"><%= truncate(item.category.name,length: 20) %></div>
         <br/>
         <!-- 料金 -->
        <div class="item-price"><%= item.fare %>円</div>
         <!-- 状態-->
         <%= link_to item.loan_state.name, borrow_path(:id => item.id), class: "stus-icon item-stus" %>
           <br/>
           <br/>
         <!-- 貸出場所　-->
         <div class="item-place">
           貸出場所：<%= item.location %></div>
         <!-- 更新日 -->
         <div class="item-update">
         更新日：<%= item.created_at.to_s %></div>
     </div>
     </li>
        <% end%>
      </ul>
    </div>




