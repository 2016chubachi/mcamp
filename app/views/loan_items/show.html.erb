<%= render partial: "shared/sidebar", locals:{subType: "LoanItems"}%>

<div id="main">

  <% if flash.notice %>
      <div class="tn-box tn-box-color">
        <p id="p-tn-box"><%= flash.notice %></p>
      </div>
      <br/>
  <% end%>

  <!--アイテム名-->
    <p id="show-itm-tle"><%= @loan_item.item_name %></p>
