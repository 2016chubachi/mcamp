  <li>貸出場所：</li>
  <p class="show-p"><%= @loan_item.location %></p>
  <hr size="1" />
  <!-- 貸出場所 -->
  <li>更新日：</li>
  <p class="show-p"><%= @loan_item.created_at.strftime("%Y/%m/%d %H:%M") %></p>
  <hr size="1" />
  <!--アイテム説明-->
  <li>アイテム説明：</li>
  <p class="show-p"><%= @loan_item.item_description %></p>
  <hr size="1" />
  <!--貸出条件-->
  <li>貸出条件：</li>
  <p class="show-p"><%= @loan_item.term %></p>
  </ul></div>
