<%= render partial: "shared/sidebar", locals:{subType: "Tenders"} %>
<span style="color:#ff0000">
    <% if flash.notice %>
      <p><%= flash.notice %></p>
    <% end%>
</span>
<div>
  <table >
    <tbody>
      <tr >
        <th>
          アイテム名
        </th>
        <td >
          <%= truncate(@borrow_item.item_name,length: 15) %>
        </td>
        <th >
          状態
        </th>
        <td >
          <%= @borrow_item.borrow_state.name %>
        </td>
      </tr>
      <tr >
        <th >
          カテゴリー
        </th>
        <td >
          <%= @borrow_item.category.name %>
        </td>
        <th >
          基本料金
        </th>
        <td >
          <span style="color:#ff0000"><%= @borrow_item.fare %></span> 円
        </td>
      </tr>
      <tr >
        <th >
          借りたい場所
        </th>
        <td colspan="3" >
          <%= @borrow_item.location %>
        </td>
      </tr>
      <tr >
        <th >
          借りたい条件
        </th>
        <td colspan="3" >
          <%= @borrow_item.term %>
        </td>
      </tr>
      <tr >
        <th >
          アイテム説明
        </th>
        <td colspan="3" >
          <%= @borrow_item.item_description %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="messagenew">
    <% if current_member %>
      <hr>
      <% if @borrowReplies%>
        <% @borrowReplies.each do |reply|%>
          <table width="100%">
            <tbody>
              <tr>
                <td class="td1">
                  <p><%="メッセージ （#{reply.message_state.name}）"%> </p>
                </td>
              </tr>
              <tr>
                <td class="td2">
                  <p><%=reply.message%></p>
                </td>
              </tr>
            </tbody>
          </table>
          <hr>
        <% end%>
      <% end%>
      <%= render "shared/errors", obj: @borrow_item %>
      <% if @newBorrowReply%>
        <%= form_for(@borrow_item,url: {:controller => :tenders,:action => :update}) do |form| %>
          <%= form.fields_for @newBorrowReply do |reply| %>
              <%= render partial: "form", locals:{f: reply} %>
          <% end%>
            <%= form.submit "リクエスト" ,data: {confirm: "リクエストを送信しても宜しいですか？"}%>
          <%= debug(params) if Rails.env.development? %>
        <% end%>
      <% end%>
    <% end%>
  </div>
</div>