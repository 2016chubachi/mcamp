<%= render partial: "shared/sidebar", locals:{subType: "BorrowReplies"} %>

<div id="main">
  <% if flash.notice %>
      <div class="tn-box tn-box-color">
        <p id="p-tn-box"><%= flash.notice %></p>
      </div>
      <br/>
  <% end%>
  <%= render "shared/errors", obj: @borrow_reply %>
  <p class="webcri"><%= truncate(@borrow_reply.borrow_item.item_name,length: 25) %></p>

  <div class="bubble">
    <div class="rectangle"><span>今は<%= @borrow_reply.message_state.name %>の状態</span></div>
    <div class="triangle-l"></div>
    <div class="triangle-r"></div>
    <div class="info">
      <%= form_for(@borrow_reply) do |form| %>
          <%= render partial: "form", locals:{f: form} %>
      <% end%>
    </div>
  </div>
</div>
