<%= render partial: "shared/sidebar", locals:{subType: "Tenders"} %>


<div id="main">
  <% if @borrow_replies %>
        <% @borrow_replies.each do |item|%>
          <!--item name-->
            <p class="webcri"><%= link_to item.borrow_item.item_name,edit_tender_path(item.borrow_item)%></h2>
          <!-- 状態-->
            <% if item.message_state %>
              <p class="stus-icon item-stus"><%= item.message_state.name %></p>
            <% end %>
          <!--message-->
          <p><%= truncate(item.message,length: 20) %></p>
            <!-- date-->
            <p>申込日 <%= item.created_at.to_s %>　　更新日 <%= item.updated_at.to_s %></p>
          <div class="function"><%= link_to "編集", [:edit,item] %></div>
          <br/>
          <br/>
        <% end %>
        <%= paginate @borrow_replies %>
  <% end %>
</div>


